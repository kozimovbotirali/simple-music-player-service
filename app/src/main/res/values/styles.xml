<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_17sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:paddingRight">@dimen/_4sdp</item>
        <item name="android:paddingLeft">@dimen/_4sdp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLarge" parent="TextMedium">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_26sp</item>
    </style>

    <style name="TextMediumBold" parent="TextMedium">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextSmall" parent="TextMedium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:progressBackgroundTint">@color/white</item>
    </style>
</resources>